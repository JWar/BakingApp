<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp">

    <RadioGroup
        android:id="@+id/activity_widget_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_margin"
        android:orientation="vertical" />

    <Button
        android:id="@+id/activity_widget_choose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/detail_margin"
        android:paddingRight="@dimen/detail_margin"
        android:layout_marginTop="@dimen/detail_margin"
        android:background="@drawable/on_touch_selector"
        android:text="@string/widget_button_choose_recipe"/>

</LinearLayout>